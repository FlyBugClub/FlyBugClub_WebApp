                                    <table class="child-table">
                                        <thead>
                                            <tr>
                                                <th colspan="2">Device</th>
                                                <th>Quantity</th>
                                                <th>Re-Qty</th>
                                                <th>Price</th>
                                                <th>Sub total</th>
                                                @if (@item.Status == 0)
                                                {
                                                    <th>Status</th>
                                                    <th>Qty damage</th>
                                                    <th>#</th>
                                                }
                                                else if (@item.Status == 0 || @item.Status == 1)
                                                {
                                                    <th>Status</th>
                                                    <th>Qty damage</th>
                                                    <th colspan="1">#</th>
                                                }
                                                else
                                                {
                                                    <th>Status</th>
                                                    <th>Qty damange</th>
                                                }
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var detail in item.BorrowDetails)
                                            {
                                                <tr>
                                                    <td class="word-left" colspan="2">@detail.DeviceId</td>
                                                    <td>@detail.Quantity</td>
                                                    <td>@detail.ReturnQuantity</td>
                                                    <td class="word-right">
                                                        @if (@detail.Price != null)
                                                        {
                                                            @detail.Price.ToString("0.00");
                                                        }
                                                    </td>
                                                    <td class="word-right">@detail.SubTotal.ToString("0.00")</td>
                                                    @if (@item.Status == 0)
                                                    {
                                                        <td>//</td>
                                                        <td>//</td>
                                                        <td>
                                                            <a asp-action="EditBillDetail" asp-route-id="@detail.Bid"><i class="fa-solid fa-pen-to-square"></i></a> <span>||</span>
                                                            <a asp-action="" asp-route-id=""><i class="fa-solid fa-trash"></i></a>
                                                        </td>
                                                    }
                                                    else if (@item.Status == 1)
                                                    {
                                                        @if (detail.ReturnQuantity == 0)
                                                        {
                                                            <td class="word-left">Not yet</td>
                                                            <td>@detail.QtyDamage</td>
                                                            <td colspan="1"><a asp-controller="OrderProcessing" asp-action="EditBillDetail" asp-route-billId="@detail.Bid" asp-route-detailId="@detail.BorrowDetailId"><i class="fa-solid fa-pen-to-square"></i></a></td>
                                                        }
                                                        else if (detail.ReturnQuantity < detail.Quantity)
                                                        {
                                                            <td class="word-left">Not enough</td>
                                                            <td>@detail.QtyDamage</td>
                                                            <td colspan="1"><a asp-controller ="OrderProcessing" asp-action="EditBillDetail" asp-route-billId="@detail.Bid" asp-route-detailId="@detail.BorrowDetailId"><i class="fa-solid fa-pen-to-square"></i></a>

                                                            </td>
                                                        }
                                                        else if (detail.ReturnQuantity > 0 && detail.ReturnQuantity < detail.Quantity)
                                                        {
                                                            <td class="word-left">Not enough</td>
                                                            <td>@detail.QtyDamage</td>
                                                        }
                                                        else if (detail.ReturnQuantity == detail.Quantity)
                                                        {
                                                            <td>Enough</td>
                                                            <td>@detail.QtyDamage</td>
                                                            <td colspan="1"><a asp-controller="OrderProcessing" asp-action="EditBillDetail" asp-route-billId="@detail.Bid" asp-route-detailId="@detail.BorrowDetailId"><i class="fa-solid fa-pen-to-square"></i></a></td>
                                                        }
                                                        else if (detail.ReturnQuantity == detail.Quantity)
                                                        {
                                                            <td>Not enough</td>
                                                            <td>@detail.QtyDamage</td>
                                                        }

                                                    }
                                                    else if (@item.Status == 2)
                                                    {
                                                        if (detail.ReturnQuantity < detail.Quantity)
                                                        {
                                                            <td>Not enough</td>
                                                            <td>@detail.QtyDamage</td>
                                                        }
                                                        else if (detail.ReturnQuantity == detail.Quantity)
                                                        {
                                                            <td>Enough</td>
                                                            <td>@detail.QtyDamage</td>
                                                        }
                                                    }
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
