                        <tr>
                            <th class="bid">BID</th>
                            <th>User name</th>
                            <th>UID</th>
                            <th class="date">Borrow date</th>
                            <th class="note">Note</th>
                            <th class="status">Status</th>
                            <th class="money">Money</th>
                            <th>#</th>
                        </tr>
                    </thead>
                    <tbody class="parent-body">
                        @foreach (var item in Model.getBorowingBill)
                        {
