<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="~/img/img_logo/Bug(Đen).png" type="image/x-icon"/>
    <title>@ViewData["Title"]FlyBug Club</title>

    <!-- Bootrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Font awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- CSS -->
    <link rel="stylesheet" href="~/css/swiper-bundle.min.css">

    <link rel="stylesheet" href="~/css/default_setting.css">
    <link rel="stylesheet" href="~/css/header.css">
    <link rel="stylesheet" href="~/css/account.css">

    <!-- JetBrains Mono font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,300;0,500;0,600;0,700;0,800;1,400&display=swap" rel="stylesheet">

</head>
<body>
    <div id="backgrounf-loding">
        <img id="preloader" src="~/img/img_logo/FlyBugBLue1.png" alt="loading..."/>
    </div>

    <!-- ======================== -->
    <!-- ======== HEADER ======== -->
    <!-- =========================-->

    <header>
        <div class="nav">
            <div class="nav__links">
                <ul class="nav__links-left">
                    <li class="@*@(ViewContext.RouteData.Values["action"].ToString() == "Home"?"active":"")*@">
                        <a asp-controller="Home" asp-action="Home" data-target="/Home/Home">Trang chủ</a>
                    </li>
                    <li><a href="#">Giới thiệu</a></li>
                    <li><a href="#">Đồ án</a></li>
                    <li>
                        <a asp-controller="Store" asp-action="Store" data-target="/Store/Store">Cửa hàng</a>
                    </li>
                </ul>
            </div>
            <div class="logo">
                <div>
                    <img src="~/img/img_logo/logo.png" alt="FlyBug logo">
                </div>
            </div>
            <div class="nav__links">
                <ul class="nav__links-right">
                    <li><a href="#">Hình ảnh</a></li>
                    <li><a href="#">Chiêu mộ</a></li>
                    <li class="center login">
                        <a href="/Identity/Account/LoginCustomer">Đăng nhập</a>
                        <span>/</span>
                        <a href="/Identity/Account/Register" class="dangky">Đăng ký</a>
                    </li>
                </ul>
            </div>
        </div>
    </header>

    <!-- ======================== -->
    <!-- ========= BODY ========= -->
    <!-- =========================-->

    <div class="body"> @RenderBody() </div>

    <!-- ======== JavaScript ======== -->
    @*JS*@
    <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
    <script src="~/js/swiper-bundle.min.js"></script>
    
    @*Main Function*@
    <script src="~/js/reloader.js"></script>
    @*<script src="~/js/GoToTop.js"></script>*@

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
