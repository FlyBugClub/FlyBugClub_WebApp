@using Microsoft.AspNetCore.Identity
@using FlyBugClub_WebApp.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="~/img/img_logo/Bug(Đen).png" type="image/x-icon"/>
    <title>@ViewData["Title"]FlyBug Club</title>

    <!-- Bootrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <!-- Font awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- CSS -->
    <link rel="stylesheet" href="~/css/swiper-bundle.min.css">

    <link rel="stylesheet" href="~/css/headeradmin.css">
    <link rel="stylesheet" href="~/css/dashboard.css">
    <link rel="stylesheet" href="~/css/default_setting.css">
    <link rel="stylesheet" href="~/css/device_admin_page.css">
    <link rel="stylesheet" href="~/css/create_device.css">
    <link rel="stylesheet" href="~/css/category_admin_page.css">
    <link rel="stylesheet" href="~/css/bill_admin_page.css">
    <link rel="stylesheet" href="~/css/_admin_edit_bill.css">

    <!-- JetBrains Mono font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,300;0,500;0,600;0,700;0,800;1,400&display=swap" rel="stylesheet">

</head>
<body>
    @*<div id="backgrounf-loding">
        <img id="preloader" src="~/img/img_logo/FlyBugBLue1.png" alt="loading..."></img>
    </div>
    <button onclick="topFunction()" id="myBtn" title="Go to top"><i class="fa-solid fa-angle-up"></i></button>*@
    <!-- ======================== -->
    <!-- ======== HEADER ======== -->
    <!-- =========================-->
    <header class="center ml100">
        <div class="header">
            <div class="center infomation-area">
                <i class="fa-solid fa-envelope"></i>
                <i class="fa-solid fa-bell"></i>
                <h6>@UserManager.GetUserName(User)</h6>
                <img src="~/img/img_icon/avatar.png" alt="">
            </div>
        </div>
    </header>

    <nav>
        <ul>
            <li>
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Dashboard" class="logo">
                    <img src="~/img/img_logo/Bug(Đen)1.png" alt="logo">
                    <span class="nav-item">FlyBug Club</span>
                </a>
            </li>
            <li>
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Dashboard">
                    <i class="fas fa-solid fa-chart-line"></i>
                    <span class="nav-item">Dashboard</span>
                </a>
            </li>
            <li>
                <a asp-area="Admin" asp-controller="Member" asp-action="Member">
                    <i class="fas fa-solid fa-clipboard-user"></i>
                    <span class="nav-item">Member</span>
                </a>
            </li>
            <li>
                <a href="#" class="sub-btn">
                    <i class="fas fa-solid fa-shop"></i>
                    <span class="nav-item">Bug Shop</span>
                    <i class="fa-solid fa-chevron-right dropdown"></i>
                </a>
                <div class="sub-menu">
                    <a asp-area="Admin" asp-controller="Shop" asp-action="Devices" class="sub-item">
                        <i class="fas fa-brands fa-product-hunt"></i>
                        <span class="nav-item">Device</span>
                    </a>
                    <a asp-area="Admin" asp-controller="Category" asp-action="CategoryDevice" class="sub-item">
                        <i class="fas fa-solid fa-sitemap"></i>
                        <span class="nav-item">Category</span>
                    </a>
                    <a asp-area="Admin" asp-controller="OrderProcessing" asp-action="Bill" class="sub-item">
                        <i class="fas fa-solid fa-file-invoice-dollar"></i>
                        <span class="nav-item">receiption</span>
                    </a>
                </div>
            </li>
            <li>
                <a href="#" class="sub-btn">
                    <i class="fas fa-solid fa-diagram-project"></i>
                    <span class="nav-item">Project</span>
                    <i class="fa-solid fa-chevron-right dropdown project"></i>
                </a>
                <div class="sub-menu">
                    <a href="#" class="sub-item">
                        <i class="fas fa-brands fa-product-hunt"></i>
                        <span class="nav-item">Device</span>
                    </a>
                    <a href="#" class="sub-item">
                        <i class="fas fa-solid fa-sitemap"></i>
                        <span class="nav-item">Category</span>
                    </a>
                </div>
            </li>
            <li>
                <a href="#">
                    <i class="fas fa-solid fa-photo-film"></i>
                    <span class="nav-item">Image Activity</span>
                </a>
            </li>
            <li>
                <a href="/admin/dashboard/logout" class="logout">
                    <i class="fas fa-solid fa-right-from-bracket"></i>
                    <span class="nav-item">Logout</span>
                </a>
            </li>
        </ul>
    </nav>

    <!-- ======================== -->
    <!-- ========= BODY ========= -->
    <!-- =========================-->
    <div class="center ml100">
        @RenderBody()
    </div>
        


    <script src="https://code.jquery.com/jquery-3.6.0.min.js" charset="utf-8"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.7.0/dist/js/bootstrap.min.js"></script>

    <!-- ======== JavaScript ======== -->
    @*JS*@
    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" charset="utf-8"></script>*@
    <script src="~/js/collapenav.js"></script>

    <script src="~/js/table_expand_process_bill.js"></script>
</body>
</html>
