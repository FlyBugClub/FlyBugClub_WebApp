@{
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}


<div class="screen">
    <div class="container">
        <div class="wraper-account">
            <div class="row">
                <div class="col-7">
                    <div class="content-login">
                        <img class="img-background img-signup-page" src="~/img/img_background/DSCF0512.jpg" />
                        <div class="content-on-background">
                            <p class="slogan-in-account"><span>CREATE</span> THE <span>TALENT</span> WITH YOUR <span>PASSION</span></p>
                        </div>
                    </div>
                </div>
                <div class="col-5">
                    <div class="wrap-content-account">
                        <img class="img-logo" src="~/img/img_logo/logo-E-W.png" />
                        <p class="title-content-account">Xác nhận mã xác thực</p>
                        <div class="center line-symbol">
                            <hr style="width:50%;text-align:left; color:white; height: 2px; margin-left: 30px;">
                            <i class="fa-solid fa-angle-down"></i>
                            <hr style="width:50%;text-align:left; color:white; height: 2px; margin-right: 30px;">
                        </div>
                        <div class="center">
                            <form method="post" action="/Account/cuong">
                                <div class="input-otp">
                                    <input type="text" name="otp0" id="otp-0" class="otp-input" maxlength="1">
                                    <input type="text" name="otp1" id="otp-1" class="otp-input" maxlength="1">
                                    <input type="text" name="otp2" id="otp-2" class="otp-input" maxlength="1">
                                    <input type="text" name="otp3" id="otp-3" class="otp-input" maxlength="1">
                                    <input type="text" name="otp4" id="otp-4" class="otp-input" maxlength="1">
                                    <input type="text" name="otp5" id="otp-5" class="otp-input" maxlength="1">
                                </div>
                                <div class="center">
                                    <button type="submit" class="submit verify-otp">Xác nhận</button>
                                </div>
                            </form>
                        </div>
                        <div class="center">
                            <p>Bạn chưa nhận được mã xác thực?</p>
                            <form class="form-resent-opt" method="post" action="/Account/ResendEmail">
                                <button type="submit" class="btn-resent-opt">Gửi lại.</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</div>
<script type="text/javascript">

    document.addEventListener("DOMContentLoaded", function () {
        // Tìm trường input đầu tiên
        var firstInput = document.getElementById("otp-0");

        // Focus vào trường input đầu tiên
        if (firstInput) {
            firstInput.focus();
        }
    });

    document.addEventListener("input", function (e) {
        if (e.target.className === "otp-input" && e.target.value.length === 1) {
            var nextInput = e.target.nextElementSibling;
            if (nextInput) {
                nextInput.focus();
            }
        }
    });

    document.addEventListener("paste", function (e) {
        e.preventDefault();
        var pastedText = (e.clipboardData || window.clipboardData).getData("text");
        if (pastedText.length === 6) {
            for (var i = 0; i < 6; i++) {
                var input = document.getElementById("otp-" + (i));
                input.value = pastedText[i];
            }
        }
    });
</script>

