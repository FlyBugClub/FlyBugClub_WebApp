@{
    Layout = "~/Views/Shared/_LayoutDashboardUser.cshtml";
}

<div class="wrap-info-user">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="avatar">
                    <img src="~/img/img_user/IMG_0042.jpg" alt="avatar"/>
                </div>
            </div>
            <div class="col-md-9">
                <h2 class="hello">Hello</h2>
                <h3>| @ViewBag.FullName |</h3>
                <h4 class="welcome">Welcome to FlyBug Club Website</h4>
                <hr />
                <div class="container">
                    <div class="row">
                        <div class="col">
                            <div class="single-info">
                                <b>MSSV/MSNV:</b>
                                <p>@ViewBag.UID</p>
                            </div>
                            <div class="single-info">
                                <b>Giới tính:</b>
                                <p>@ViewBag.Gender</p>
                            </div>
                            <div class="single-info">
                                <b>Số điện thoại:</b>
                                <p>@ViewBag.Phone</p>
                            </div>
                            <div class="single-info address">
                                <b>Địa chỉ: <span>@ViewBag.Address</span></b>
                            </div>
                        </div>
                        <div class="col">
                            <div class="single-info">
                                <b>Email:</b>
                                <p>@ViewBag.Email</p>
                            </div>
                            <div class="single-info">
                                <b>Khoa:</b>
                                <p>@ViewBag.Khoa</p>
                            </div>
                            <div class="single-info">
                                <b>Ngành:</b>
                                <p>@ViewBag.Nganh</p>
                            </div>
                            <div class="single-info">
                                <b>Vị trí:</b>
                                <p>@ViewBag.Position</p>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
