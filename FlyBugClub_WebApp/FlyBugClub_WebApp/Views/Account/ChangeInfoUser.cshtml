@model FlyBugClub_WebApp.Models.User

@{
    Layout = "~/Views/Shared/_LayoutDashboardUser.cshtml";
}

<div class="wrap-info-user">
    <div class="container">
        <form asp-action="Finish_ChangeInfoUser" class="ChangeInfoUser">
            <div class="row">
                <div class="col-3">
                    <div class="center">
                        <img src="~/img/core_team/IMG_0042.jpg" alt="logo" class="avatar">
                    </div>
                    <div class="center">
                        <input type="file" asp-for="ImgUser" id="upload" placeholder="" />
                    </div>
                </div>
                <div class="col-9">
                    <div class="row">
                        <div class="col">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="StudentId" />
                            <div class="form-group">
                                <label asp-for="StudentId" class="control-label">MSSV/MSNV</label>
                                <input asp-for="StudentId" value="22011125" class="form-control" readonly />
                                <span asp-validation-for="StudentId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Name" class="control-label">Họ và tên</label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Gender" class="control-label">Giới tính</label>
                                <select asp-for="Gender" class="form-control">
                                    <option>Nam</option>
                                    <option>Nữ</option>
                                    <option>Khác</option>
                                </select>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Phone" class="control-label">Số điện thoại</label>
                                <input asp-for="Phone" class="form-control" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Address" class="control-label">Địa chỉ</label>
                                <input asp-for="Address" class="form-control" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>

                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label asp-for="Email" class="control-label">Email</label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Major" class="control-label">Khoa</label>
                                <input asp-for="Major" class="form-control" />
                                <span asp-validation-for="Major" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Faculty" class="control-label">Ngành</label>
                                <input asp-for="Faculty" class="form-control" />
                                <span asp-validation-for="Faculty" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PositionId" class="control-label">Chức vụ</label>
                                <select asp-for="PositionId" class="form-control" asp-items="ViewBag.PositionId"></select>
                                <span asp-validation-for="PositionId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group btn-submit">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

